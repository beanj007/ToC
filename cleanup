#!/bin/bash -x
# By Killuminati

cd /mnt/e/ToC/src
rm *.o
rm merc
make
rm *.o
rm ../area/merc
cp merc ../area
rm merc
cd ..
set +x
echo "Done."
echo ""
sleep 3
read -p "Kill existing processes and start ToC?"  RESPONSE
if [ "$RESPONSE" = y ]; then
	pkill -e merc
	pkill -e immortal
	pkill -e startup
	./startup &
elif ["$RESPONSE" = n ]; then
	echo "Reboot in game for changes to take effect."
else
	echo "Make a valid selection! [y or n]"
fi


